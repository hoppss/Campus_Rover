<?xml version='1.0'?>

<!-- urdf: unified robot description format -->

<robot name="campusrover">

  <!-- materials color description -->
  <!-- <xacro:include filename="$(find campusrover_description)/urdf/materials.xacro" /> -->

  <!-- Link Define -->
  <link name="base_link">
    <visual>
      <!-- rpy: roll, pitch, yaw ; xyz; x, y, z position -->
      <origin rpy="1.57075 0 3.1415" xyz="0.2 -0.725 0"/>
      <!-- describe robot's appearance -->
      <geometry>
        <mesh filename="package://campusrover_description/meshes/body.dae" />
      </geometry>
    </visual>
  </link>

  <link name="velodyne_link">
    <visual>
      <origin xyz="0.0 0.0 0.0" />
      <geometry>
        <cylinder length="0.038" radius="0.052" />
      </geometry>
    </visual>
  </link>

  <link name="ydlidar_back_link">
    <visual>
      <origin xyz="0.0 0.0 0.0" />
      <geometry>
        <cylinder length="0.01" radius="0.01" />
      </geometry>
      <!-- <material name="gray" /> -->
    </visual>
  </link>

  <link name="ydlidar_front_link">
    <visual>
      <origin xyz="0.0 0.0 0.0" />
      <geometry>
        <cylinder length="0.01" radius="0.01" />
      </geometry>
      <!-- <material name="gray" /> -->
    </visual>
  </link>

  <link name="xsens_imu_odom_link">
    <visual>
      <origin xyz="0.0 0.0 0.0" />
      <geometry>
        <box size="0.035 0.035 0.015" />
      </geometry>
      <material name="black" />
    </visual>
  </link>

  <link name="right_camera_link">
    <visual>
      <origin xyz="0.0 0.0 0.0" />
      <geometry>
        <box size="0.035 0.035 0.015" />
      </geometry>
      <material name="black" />
    </visual>
  </link>

  <link name="arm_link_1">
    <visual>
      <origin xyz="0.0 0.0 0.0" />
      <geometry>
        <box size="0.02 0.02 0.01" />
      </geometry>
      <material name="black" />
    </visual>
  </link>


  <joint name="xsens_imu_odom_link_joint" type="fixed">
    <parent link="base_link" />
    <child link="xsens_imu_odom_link" />
    <origin xyz="-0.232 0 0.765" rpy="0 0 0" />
  </joint>

  <joint name="velodyne_link_joint" type="fixed">
    <parent link="base_link" />
    <child link="velodyne_link" />
    <origin xyz="-0.232 0 1.329" rpy="0 0 -0.03" />
  </joint>

    <joint name="ydlidar_back_link_joint" type="fixed">
    <parent link="base_link" />
    <child link="ydlidar_back_link" />
    <origin xyz="-0.51 0 0.14" rpy="0 0 3.1415" />
  </joint>

  <joint name="ydlidar_front_link_joint" type="fixed">
    <parent link="base_link" />
    <child link="ydlidar_front_link" />
    <origin xyz="0.12 0 0.125" rpy="0 0 0" />
  </joint>

  <joint name="link_0_joint" type="fixed">
    <parent link="base_link" />
    <child link="arm_link_1" />
    <origin xyz="-0.05 -0.275 0.995" rpy="0 0 0" />
  </joint>

  <joint name="right_camera_link_joint" type="fixed">
    <parent link="arm_link_1" />
    <child link="right_camera_link" />
    <origin xyz="-0.027 -0.09 0.0227" rpy="0 0 0" />
  </joint>

 




</robot>
