<launch>
  <arg name="scan_topic"     default="scan"/>

  <node name="ydlidar_g4_node"  pkg="ydlidar_ros"  type="ydlidar_node" output="screen" respawn="false" >
    <remap from="scan" to="$(arg scan_topic)"/>
    <param name="port"         type="string" value="/dev/ydlidar_back"/>  
    <param name="baudrate"         type="int" value="230400"/>  
    <param name="frame_id"     type="string" value="ydlidar_back_link"/>
    <param name="resolution_fixed"    type="bool"   value="true"/>
    <param name="auto_reconnect"    type="bool"   value="true"/>
    <param name="reversion"    type="bool"   value="true"/>
    <param name="angle_min"    type="double" value="-130" />
    <param name="angle_max"    type="double" value="130" />
    <param name="range_min"    type="double" value="0.05" />
    <param name="range_max"    type="double" value="16.0" />
    <param name="ignore_array" type="string" value="" />
    <param name="frequency"    type="double" value="10"/>
    <param name="samp_rate"    type="int"    value="9"/>
  </node>
</launch>