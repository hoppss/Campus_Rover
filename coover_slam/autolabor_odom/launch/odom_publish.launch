<!-- -*- mode: XML -*- -->

<launch>
  <arg name="debug" default="false"/>
  <arg name="pub_tf" default="true"/>
  <arg name="map_file" default="$(find pev_map_server)/maps/medialab_yard.yaml" />
  <arg name="bag_file" default="$(env HOME)/bags/pev_bag/20180910medialab_gps.bag" />

  <group if="$(arg debug)">
    <param name="robot_description"
      textfile="$(find pev_description)/urdf/pev.urdf" />

    <node name="robot_state_publisher" pkg="robot_state_publisher"
      type="robot_state_publisher" />

    <node pkg="rosbag" type="play" name="rosbag_play_node"
        args="$(env HOME)/bags/pev_bag/20190225_planner0.bag --clock" >
    </node>

    <param name="use_sim_time" value="true" />

    <node pkg="hector_trajectory_server" type="hector_trajectory_server" name="trajectory_node">
      <remap from="trajectory" to="trajectory" />
      <param name="target_frame_name" type="string" value="/odom" />
      <param name="source_frame_name" type="string" value="/base_link" />
      <param name="trajectory_update_rate" value="10" />
      <param name="trajectory_publish_rate" value="10" />
    </node>

    <node pkg="pev_map_server" type="pcd_map_loader" name="pcd_map_loader_node" output="screen">
      <param name="config_file" type="str" value="$(arg map_file)" />
      <remap from="map_cloud" to="points_map" />
    </node>

    <node pkg="tf" type="static_transform_publisher" name="map_odom_broadcaster" 
          args="1 0 0 0 0 0 map odom 100" />

    <node pkg="rviz" type="rviz" name="rviz" args="-d $(find pev_odom)/rviz/sensors_odom.rviz" />

  </group>

  <node pkg="pev_odom" type="pev_odom" name="pev_odom" output="screen">
    <remap from="imu"                to="xsens_imu_odom/imu/data" />
    <remap from="rear_wheel_encoder" to="/rear_wheel_encoder_data" />
    <remap from="gps"                to="gps_fix" />
    <remap from="magnetic"           to="/xsens_imu_odom/imu/mag" />
    <param name="pub_tf"             type="bool" value="$(arg pub_tf)" />
    <param name="pub_odom"           type="bool" value="true" />
    <param name="pub_init_pose"      type="bool" value="false" />
    <param name="source_frame_id"    type="str"  value="odom" />
    <param name="target_frame_id"    type="str"  value="base_link" />
    <param name="encorder_ppr"       type="int"  value="10000" />
    <param name="num_data_init_pose" type="int"  value="5" />
  </node>

</launch>
